body {
  font-family: Arial;
  background: #f5f5f5;
  padding: 20px;
}

#login, #chat {
  max-width: 500px;
  margin: auto;
  padding: 10px;
  background: white;
  border-radius: 10px;
  box-shadow: 0 0 10px gray;
}

#messages {
  height: 300px;
  overflow-y: auto;
  border: 1px solid #ccc;
  margin-bottom: 10px;
  padding: 5px;
}
